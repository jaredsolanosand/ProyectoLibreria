<!DOCTYPE html>
<html lang="es">

<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <% for (let i = 0; i < datos.autores.length; i++) { %>
    <meta name="author" content="<%= datos.autores[i][0] %>">
    <meta name="mail:" content="<%= datos.autores[i][1] %>">
    <% } %>
    <meta name="description" content="<%= datos.descripcion %>">
    <% if (datos.fechaCreacion) { %>
    <meta name="created" content="<%= datos.fechaCreacion %>">
    <% } %>
    <meta name="keywords" content="<%= datos.palabrasClave %>">
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/comunes.css">
    <% if (datos.jquery) { %>
    <script src="/js/jquery-3.6.4.min.js"></script>
    <% } %>
</head>

<body>
    <header style="background-color: rgba(0, 0, 0, 0.5); padding: 10px;">
        <div style="color: white;">
            <% if (vistasAnteriores && vistasAnteriores.length > 0) { %>
            <% vistasAnteriores.forEach((vista, index) => { %>
            <span><%= vista %></span>
            <% if (index !== vistasAnteriores.length - 1) { %>
            <span style="margin: 0 5px;">></span>
            <% } %>
            <% }) %>
            <span style="margin: 0 5px;">></span> 
            <% } %>
            <span style="font-weight: bold;"><%= nombreVistaActual %></span>
        </div>
        <a href="/" style="color: white; text-decoration: none;">
            <i class="fas fa-home"></i> Home
        </a>
    </header>
